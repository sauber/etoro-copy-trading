{
  "name": "Deno",

  "build": {
    "dockerfile": "Dockerfile"
  },

  "settings": {
    "deno.config": "./deno.json",
    "deno.enable": true,
    "deno.lint": true,
    "editor.defaultFormatter": "denoland.vscode-deno",
    "[typescriptreact]": {
      "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[typescript]": {
      "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[javascriptreact]": {
      "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[javascript]": {
      "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[css]": {
      "editor.defaultFormatter": "vscode.css-language-features"
    }
  },

  "extensions": [
    "akil-s.tokyo-light",
    "denoland.vscode-deno",
    "sastan.twind-intellisense"
  ],

  "remoteUser": "vscode",
  "forwardPorts": [8000],

  "customizations": {
    "codespaces": {
      "repositories": {
        "sauber/etoro-data": {
          "permissions": {
            "contents": "write"
          }
        }
      }
    }
  }
}
